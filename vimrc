set nocompatible

"Turn syntax highlighting on
syntax on

"Allow hidden buffers
set hidden

" Search
set ignorecase

" Indentaion
set autoindent
set tabstop=2
set shiftwidth=2
set expandtab

" Spacing
set linespace=2
colorscheme desert

set number
set ruler

" Turn off the menu and tool bar
set guioptions-=m
set guioptions-=T
